<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-daily-checkin-table" author="loyalty-service">
        <createTable tableName="daily_checkin">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="checkin_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="points_earned" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="checkin_order" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="daily_checkin"
                columnNames="user_id, checkin_date"
                constraintName="uk_daily_checkin_user_date"/>

        <createIndex indexName="idx_daily_checkin_user_id" tableName="daily_checkin">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_daily_checkin_checkin_date" tableName="daily_checkin">
            <column name="checkin_date"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="daily_checkin"
                baseColumnNames="user_id"
                constraintName="fk_daily_checkin_user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>

